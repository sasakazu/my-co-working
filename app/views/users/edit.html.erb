


<%= render 'shared/header' %>

    <div class="user-edit-main">
      <div class="container">

        <h2>プロフィール編集</h2>

      <%= image_tag @user.icon , { :class => "img-circle" } %>


<div class="user-edit-form">

      <%= form_for @user do |f| %>

        <div class="user-edit-icon">

          <%= f.file_field :icon %>

        </div>


      <%= f.label :ユーザー名 %>
      <%= f.text_field :name %>

      <%= f.label :メールアドレス %>
      <%= f.text_field :email %>


      <%= f.submit '更新', { :class => "btn btn-warning" } %>


      <% end %>


    </div>


    </div>

  </div>


<%= render 'shared/footer' %>
